@model IEnumerable<ApplicationUser>
@using Microsoft.AspNetCore.Identity;

@{
    ViewBag.Title = "All Users";
}

<h4>To są wszystkie zarejestrowane osoby</h4>
<hr />

@if (Model.Any())
{
    <a class="btn btn-dark" style="width:auto" asp-action="Register" asp-controller="Account">Dodaj nowego użytkownika</a>
    <br />
    <br />
    foreach (var user in Model)
    {
        <div class="card mb-3">
            <div class="card-header">

                Role Id: @user.Id

            </div>
            <div class="card-body">
                <h5 class="card-title">@user.Imie @user.Nazwisko</h5>
            </div>
            <div class="card-footer">
                <a asp-action="EditUser" asp-controller="Administration" 
                   asp-route-id="@user.Id" class="btn btn-primary" >Edytuj</a> <!--tutaj przekazuje Id roli którą edytuję-->
                <a href="#" class="btn btn-danger">Usuń</a>
            </div>
        </div>

    }
}

else
{
    <div class="card">
        <div class="card-header">
            Brak zarejestrowanych użytkowników do wyświetlenia
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Dodaj nowego użytkownika
            </h5>
            <a class="btn btn-primary" style="width:auto" asp-action="Register" asp-controller="Account">Dodaję</a>
        </div>
    </div>
}
<a class="btn btn-outline-secondary" style="width:auto" asp-action="Home" asp-controller="Index">Powrót</a>

