@model FarulewskiKlinika.ViewModels.WizytaViewModel
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Create";
}

@if (SignInManager.IsSignedIn(User))
{
    <img src="~/Images/img1.jpg" align="left" height="200" width="250" />
    <h4 class="text-primary">Umów wizytę @UserManager.GetUserAsync(User).Result.Imie</h4>
    <br />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <p><strong>Pacjent</strong></p>
                    <p>Imie: @UserManager.GetUserAsync(User).Result.Imie</p>
                    <p>Nazwisko: @UserManager.GetUserAsync(User).Result.Nazwisko</p>
                    <p>Email: @UserManager.GetUserAsync(User).Result.Email
                    <p>Pesel: @UserManager.GetUserAsync(User).Result.Pesel
                </div>
                <div class="form-group">
                    <p><strong>Lekarz</strong></p>
                    <p>Lekarz: @Model.Imie</p>
                    <p>Lekarz: @Model.Nazwisko</p>
                    <p>Lekarz: @Model.Specjalizacja</p>
                </div>
                <div class="form-group">
                    <p><strong>Data wizyty</strong></p>
                    <input asp-for="DataWizyty" class="form-control" />
                    <span asp-validation-for="DataWizyty" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <p><strong>Zalecenia</strong></p>
                    <input asp-for="Zalecenia" class="form-control" />
                    <span asp-validation-for="Zalecenia" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Umawiam" class="btn btn-primary" />
                    <a href="Personel" class="btn btn-outline-secondary">Powrót</a>
                </div>
            </form>
        </div>
    </div>
}



else
{
    <br>
    <img src="~/Images/img1.jpg" align="left" height="200" width="250" />
    <font size="5">Przed umówieniem wizyty, proszę się zalogować.</font>
    <br>
    <br>
    <font size="3">Czy już się rejestrowałeś? Proszę potwierdzić rejestrację.</font>
    <br>
    <br>
    <br>
    <br>
    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Account" asp-action="Register">Zarejestruj się</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">Zaloguj się</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" font color="blue" asp-action="Index">Powrót</a>
        </li>
    </ul>
}


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

